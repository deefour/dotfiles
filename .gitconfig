[user]
  name = Jason Daly
  email = jason@deefour.me
[diff]
[color]
  ui = auto
[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  ap = add --all -p
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  div = divergence
  fa = fetch --all
  pom = push origin master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  pr = pull --rebase

  head = !git l -1
  h = !git head
  hp = "!source ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all

[merge]
  tool = vimdiff
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
[push]
	default = matching
[help]
	autocorrect = 1
