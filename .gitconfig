[user]
  name = Jason Daly
  email = jason@deefour.me
[diff]
[color]
  ui = auto
[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  ap = add --all -p
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  div = divergence
  fa = fetch --all
  pom = push origin master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  pr = pull --rebase

  head = !git l -1
  h = !git head
  r = !git l -30
  ra = !git r --all
  l = "!git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
  la = !git l --all

[merge]
  tool = vimdiff
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
[push]
	default = matching
[help]
	autocorrect = 1
[pager]
  diff = "diff-so-fancy | less --tabs=4 -RFX"
  show = "diff-so-fancy | less --tabs=4 -RFX"
