# @see https://gist.github.com/JeffreyWay/1525217/#comment-72260
server () {
  local port=${1:-8000}
  local router=${DOT_ROOT}/lib/router.php
  local public_root="$(pwd)/public"

  if [ ! -d "$public_root" ]; then
    public_root="$(pwd)"
  fi

  (cd $public_root; open "http://localhost:${port}" && php -Slocalhost:${port} ${router})
}