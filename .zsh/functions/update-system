update-system() {
  cd ~/.vim && rake;
  cd ~/.janus && for f in `ls`; do cd $f && git pull origin master; cd ~/.janus; done;

  antigen update
  antigen selfupdate

  composer global update

  antigen cleanup --force

  brew update && brew upgrade

  brew cleanup

  npm update -g

  sudo softwareupdate -i -a
}
