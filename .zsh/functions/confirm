# @link http://stackoverflow.com/a/3232082/605707
function confirm () {
  # call with a prompt string or use a default
  confirmation=$1

  if [[ -z "$confirmation" ]]; then
    confirmation="Are you sure? [y/N]"
  fi

  read "?${confirmation}: " response
  case $response in
    [yY][eE][sS]|[yY])
      true
      ;;
    *)
      false
      ;;
  esac
}
