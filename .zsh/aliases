alias rst='touch tmp/restart.txt'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la="ls -A"

alias take="mcd"

alias bundle="nocorrect bundle "
alias tmux="nocorrect tmux "
alias t="nocorrect tmux -u"
alias fix="nocorrect fix "
alias heroku="nocorrect heroku "

alias php-server=php-fastcgi

alias reload!=". ~/.zshrc"

# Flush DNS (OS X)
alias flushdns="dscacheutil -flushcache"

# Because I'm an idiot and sometimes type it backwards
alias dnsflush="flushdns"

# Fix and shrink png files. Pass infile and outfile.
alias pngfix="pngcrush -rem gAMA -rem cHRM -rem iCCP -rem sRGB $1 $2"

# git
alias gst="git st "
alias gp="git aa -p "

# URL-encode strings
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'

# Show/hide hidden files in Finder
alias show="defaults write com.apple.Finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.Finder AppleShowAllFiles -bool false && killall Finder"

# Empty the Trash on all mounted volumes and the main HDD
# Also, clear Appleâ€™s System Logs to improve shell startup speed
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

alias update-system='sudo softwareupdate -i -a; brew update; brew upgrade; npm update npm -g; npm update -g'

alias lssh='cat ~/.ssh/config | grep "Host " | cut -f2 -d\ '

alias guard="guard --no-bundler-warning"
